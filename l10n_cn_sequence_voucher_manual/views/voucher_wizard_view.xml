<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="action_move_sequence_generate_wizard" model="ir.actions.act_window">
            <field name="name">Generate Chinese Voucher Number</field>
            <field name="res_model">account.move.sequence.generate.wizard</field>
            <field name="view_mode">form</field>
        </record>

        <act_window name="Generate Chinese Voucher Number"
                    res_model="account.move.sequence.generate.wizard"
                    src_model="account.move"
                    key2="client_action_multi"
                    multi="True"
                    view_mode="form"
                    view_type="form"
                    target="new"
                    id="action_move_sequence_generate_wizard"/>


        <record id="view_move_sequence_generate_wizard_form" model="ir.ui.view">
            <field name="name">view.account.move.sequence.generate.wizard.form</field>
            <field name="model">account.move.sequence.generate.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Generate Voucher Number Settings">
                            <field name="prefix"/>
                            <field name="padding"/>
                            <field name="number_begin"/>
                            <field name="suffix"/>
                        </group>
                        <group string="Has Number Vouchers" col="1">
                            <div>vouchers below already have chinese voucher number, will rewrite it.</div>
                            <field name="is_rewrite"/>
                            <field name="has_sequence_move_ids" nolabel="1">
                                <tree>
                                    <field name="chinese_sequence_number"/>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="journal_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                        <group string="No Number Vouchers" col="1">
                            <div>vouchers below will generate number by date.</div>
                            <field name="empty_sequence_move_ids" nolabel="1">
                                <tree>
                                    <field name="chinese_sequence_number"/>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="journal_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="button_generate_number" type="object" string="Generate" class="oe_highlight"/>
                        <button string="Cancel" speical="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>